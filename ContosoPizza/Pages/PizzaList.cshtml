@model ContosoPizza.Pages.PizzaListModel
@{
    ViewData["Title"] = "Pizza List 🍕";
}

<h1>Pizza List 🍕</h1>

<!-- New Pizza form will go here -->
<!-- List of pizzas will go here -->
@* Example of displaying pizzas in a table *@
@*
@if (Model.Pizzas != null && Model.Pizzas.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Ingredients</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pizza in Model.Pizzas)
            {
                <tr>
                    <td>@pizza.Name</td>
                    <td>@string.Join(", ", pizza.Ingredients)</td>
                    <td>@pizza.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pizzas available.</p>
}
